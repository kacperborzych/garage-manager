<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <import resource="classpath:repository.xml"/>
    <import resource="classpath:spring.xml"/>
    <import resource="classpath:mail.xml"/>

    <mvc:annotation-driven/>
    <context:component-scan base-package="pl.kacper.controller"/>
    <context:component-scan base-package="pl.kacper.service"/>
    <context:component-scan base-package="pl.kacper.model"/>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">

        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <mvc:view-controller path="index.html" view-name="index"/>
    <mvc:view-controller path="/" view-name="index"/>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="text"/>
        <property name="defaultEncoding" value="utf-8"/>
    </bean>
</beans>